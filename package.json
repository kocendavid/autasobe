{
  "name": "car-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:js": "esbuild script.js --bundle --minify --outfile=script.min.js",
    "build:css": "cleancss -o styles.min.css styles.css",
    "build": "npm-run-all -p build:js build:css",
    "watch:js": "esbuild script.js --bundle --minify --outfile=script.min.js --watch",
    "watch:css": "chokidar styles.css -c \"cleancss -o styles.min.css styles.css\"",
    "watch": "npm-run-all -p watch:js watch:css"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.2",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5"
  }
}


